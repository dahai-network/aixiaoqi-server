                    }
                });
            })
            wsApi();
        });

        function wsApi() {
            var url = '/Manage/Home/TestWsApi';

            $('#txtimsi').parent().children('button').click(function () {
                var method = $(this).attr('id').substring(3, $(this).attr('id').length);
                //alert(method);
                $.post(url,
                    {
                        method: method,
                        imsi: $('#txtimsi').val(),
