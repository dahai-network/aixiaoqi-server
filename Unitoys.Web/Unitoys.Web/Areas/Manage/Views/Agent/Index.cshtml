                    <th data-options="field:'SalerPersonnelNum',width:60">销售人员</th>
                    <th data-options="field:'AfterSalesPersonalNum',width:60">售后服务</th>
                    <th data-options="field:'SalesArea',width:60">目前销售区域</th>
                    <th data-options="field:'Contact',width:100">联系人</th>
                    <th data-options="field:'ContactMobilePhone',width:100">联系人手机</th>
                    <th data-options="field:'EMail',width:100">邮箱</th>
                    <th data-options="field:'QQWeChat',width:100">QQ/微信</th>
                    <th data-options="field:'Status',width:60,formatter:formatStatus">状态</th>
                    <th data-options="field:'CreateDate',width:100,formatter:formatDateTimeInt">时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
