@{
    ViewBag.Title = "用户登录记录";
    Layout = "../Shared/_Layout.cshtml";
}
<div class="easyui-layout" fit="true" >
    <div data-options="region:'north',border:false" style="height:90px">
        <div id="p" class="easyui-panel" title="高级查询" style="width:100%;height:90px;padding:10px;">
            <form id="ff" method="post">
                <span>用户名:</span>
                <input id="loginName" type="text" class="easyui-textbox" style="height:25px;" />
               
                <a href="#" class="easyui-linkbutton " data-options="iconCls:'icon-search'" onclick="doSearch()">查询</a>
            </form>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="grid" class="easyui-datagrid" title="用户管理" style="width:100%;height:100%"
               data-options="rownumbers:true,fitColumns:true,singleSelect:true,url:'/Manage/UserLoginRecord/GetList',method:'get',pagination:true">
            <thead>
                <tr>
                    <th data-options="field:'LoginName',width:120">用户名</th>
                    <th data-options="field:'LoginIp',width:120">登录ip</th>
                    <th data-options="field:'Entrance',width:120">登录设备</th>
                    <th data-options="field:'LoginDate',width:100">登录时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

    <script type="text/javascript">
        var grid;
        var dlg_Edit;
        var dlg_Edit_form;

        $(function () {
            grid = $("#grid");
            dlg_Edit = $("#dlg-edit").dialog();
            dlg_Edit_form = dlg_Edit.find('form');
        })

        function doSearch() {
            $("#grid").datagrid('load', {
                loginName: $("#loginName").val() == null ? "" : $("#loginName").val()
            });
        }
    </script>
