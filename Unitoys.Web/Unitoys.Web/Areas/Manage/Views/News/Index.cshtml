@{
    ViewBag.Title = "新闻管理";
    Layout = "../Shared/_Layout.cshtml";
}
<script src="~/Content/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/js/uploadify/jquery.uploadify.min.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="~/Content/js/uploadify/uploadify.css">
<div class="easyui-layout" fit="true">
    <div data-options="region:'north',border:false" style="height:90px">
        <div id="p" class="easyui-panel" title="高级查询" style="width:100%;height:90px;padding:10px;">
            <form id="ff" method="post">
                <span>标题:</span>
                <input id="title" type="text" class="easyui-textbox" style="height:25px;" />
                <span>发布人:</span>
                <input id="publisher" type="text" class="easyui-textbox" style="height:25px;" />
                <span>创建时间:</span>
                <input id="createStartDate" type="text" class="easyui-datetimebox" name="createStartDate" data-options="showSeconds:false" style="height:25px;" />
                <span>-</span>
                <input id="createEndDate" type="text" class="easyui-datetimebox" name="createEndDate" data-options="showSeconds:false" style="height:25px;" />
                <a href="#" class="easyui-linkbutton " data-options="iconCls:'icon-search'" onclick="doSearch()">查询</a>
            </form>
        </div>
    </div>
    <div data-options="region:'center',border:false">
        <table id="grid" class="easyui-datagrid" title="新闻列表管理" style="width:100%;height:100%"
               data-options="rownumbers:true,fitColumns:true,singleSelect:true,url:'/Manage/News/GetList',method:'get',toolbar:toolbar,pagination:true,onDblClickRow:onDbOpenDialog">
            <thead>
                <tr>
                    <th data-options="field:'Title',width:150">标题</th>
                    <th data-options="field:'Image',width:120,formatter:formatPic">图片</th>
                    <th data-options="field:'Publisher',width:120">发布人</th>
                    <th data-options="field:'NewsDate',width:100">新闻时间</th>
                    <th data-options="field:'IsTop',width:100,formatter:formatIsTop">置顶</th>
                    <th data-options="field:'NewsType',width:120,formatter:formatNewsType">类型</th>
                    <th data-options="field:'CreateDate',width:100,formatter:formatDateTimeInt">创建时间</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="dlg-edit" class="easyui-dialog" title="添加" style="width:800px;height:500px;padding:20px"
     data-options="
                    iconCls: 'icon-save',
                    closed:true,
                    buttons: [{
                        text:'保存',
                        iconCls:'icon-ok',
                        handler:saveData
                    }]
                ">
    <form method="post" id="Form" data-options="novalidate:true">
        <input type="hidden" value="" id="ID" name="ID" />
        <table cellpadding="5" class="tb_form">
            <tr>
                <td style="text-align:right" width="100">
                    标题：
                </td>
                <td>
                    <input type="text" name="Title" id="Title" data-options="required:true" class="easyui-textbox" style="width: 220px;height:33px;" maxlength="50" /> &nbsp;
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    发布人：
                </td>
                <td>
                    <input type="text" name="Publisher" id="Publisher" class="easyui-textbox" style="width: 220px;height:33px;" maxlength=50 /> &nbsp;
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    类型：
                </td>
                <td>
                    <select id="NewsType" name="NewsType" class="easyui-combobox" style="width: 220px; ">
                        <option value="0" selected="selected">行业</option>
                        <option value="1">公司</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    图片：
                </td>
                <td>
                    <input type="hidden" name="Image" id="Image" maxlength=50 />
                    <input type="file" name="file_upload" id="file_upload" /> <div id="j_UploadResult"></div>
                    <script type="text/javascript">
                        $(function () {
                            $('#file_upload').uploadify({
                                'height': 25,
                                'width': 100,
                                'buttonText': '上传图片',
                                'swf': '/Content/js/uploadify/uploadify.swf',
                                'uploader': '/Manage/Home/UploadImgAsync',
                                'onUploadError': function (file, errorCode, errorMsg, errorString) {
                                    $("#j_UploadResult").html(errorString).css({ color: "#CC0033" });
                                },
                                'onUploadSuccess': function (file, data, response) {
                                    if (data == -1) {
                                        $("#j_UploadResult").html("请选择您要上传的文件！").css({ color: "#CC0033" });
                                    } else if (data == -2) {
                                        $("#j_UploadResult").html("上传图片格式不正确！").css({ color: "#CC0033" });
                                    } else if (data == -3) {
                                        $("#j_UploadResult").html("上传的图片超过5MB了!").css({ color: "#CC0033" });
                                    } else {
                                        $("#j_UploadResult").html("图片上传成功！").css({ color: "#006633" });
                                        $("#Image").val(data);
                                    }

                                }
                            });
                        });
                    </script>
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    新闻实际时间<br />(时分-用于区分同一天中的新闻排序)：
                </td>
                <td>
                    <input id="NewsDate" type="text" class="easyui-datetimebox" name="NewsDate" data-options="showSeconds:false" style="height:25px;" />
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    置顶：
                </td>
                <td>
                    @*<input type="checkbox" name="Rate" id="Rate" class="easyui-checkbox" style="width: 100px;height:33px;" maxlength=50 />*@
                    <input type="checkbox" id="IsTop" name="IsTop" value="true" />
                </td>
            </tr>
            <tr>
                <td style="text-align:right">
                    内容：
                </td>
                <td>
                    <textarea name="Content" id="Content" style="width: 320px;"></textarea>
                </td>
            </tr>
        </table>
    </form>
</div>
<script type="text/javascript">
    var grid;
    var dlg_Edit;
    var dlg_Edit_form;

    var toolbar = [{
        text: '添加',
        iconCls: 'icon-add',
        handler: function () {
            CKEDITOR.instances["Content"].setData('');
            dlg_Edit_form.form('clear');
            dlg_Edit.dialog('open');
            dlg_Edit.dialog('setTitle', '添加News');
            dlg_Edit_form.form('load', { NewsDate: new Date().toLocaleDateString() }); //加载到表单的控件上
            dlg_Edit_form.url = '/Manage/News/Add/';
        }
    }, {
        text: '删除',
        iconCls: 'icon-cut',
        handler: del
    }
    ];
    $(function () {
        grid = $("#grid").datagrid();
        dlg_Edit = $("#dlg-edit").dialog();
        dlg_Edit_form = dlg_Edit.find('form');

        CKEDITOR.replace('Content', {
            htmlEncodeOutput: true,//内容输出时编码
            allowedContent: true,//关闭标签过滤
            fullPage: false,//
            image_previewText: '',//预览区域显示内容
            filebrowserImageUploadUrl: "/Manage/PageShow/UploadImgAsync"
        });
    })
    function onDbOpenDialog(index, rowData, value) {
        dlg_Edit.dialog('open');
        dlg_Edit_form.form('clear'); //清除之前面选中的表单
        dlg_Edit.dialog('setTitle', '您正在查看的是：' + rowData.Title + " 的信息");
        dlg_Edit_form.form('load', rowData); //加载到表单的控件上

        var dateNewsDate = new Date(rowData.NewsDate);
        var year = dateNewsDate.getFullYear();
        var month = dateNewsDate.getMonth() + 1;
        var date = dateNewsDate.getDate();
        $('#NewsDate').datetimebox('setValue', year + '-' + month + '-' + date + ' ' + dateNewsDate.getHours() + ':' + dateNewsDate.getMinutes() + ':' + dateNewsDate.getSeconds());

        dlg_Edit_form.url = '/Manage/News/Update';

        CKEDITOR.instances['Content'].setData($('#Content').val());

    }


    function formatPic(value, rec, index) {
        if (value != "") {
            return "<img height='100' src='" + value + "' />";
        }
        return value;
    }
    function formatIsTop(value, rec, index) {
        if (value == true) {
            return "<span style='color:red'>置顶</span>";
        } if (value == false) {
            return "";
        }
        return value;
    }
    function formatNewsType(value, rec, index) {
        if (value == 0) {
            return "行业";
        }
        if (value == 1) {
            return "公司";
        }
        return value;
    }

    //保存数据
    function saveData() {
        dlg_Edit_form.form('submit', {
            url: dlg_Edit_form.url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: successCallback
        });
    }

    function doSearch() {
        $("#grid").datagrid('load', {
            title: $("#title").val() == null ? "" : $("#title").val(),
            publisher: $("#publisher").val() == null ? "" : $("#publisher").val(),
            createStartDate: $("input[name$='createStartDate']").val(),
            createEndDate: $("input[name$='createEndDate']").val(),
        });
    }

    //删除数据
    function del() {
        var arr = getSelectedArr();
        if (arr.length > 0) {
            $.messager.confirm('提示信息', '您确认要删除选中的记录吗?', function (data) {
                if (data) {
                    $.ajax({
                        url: '/Manage/News/Delete',
                        type: 'post',
                        data: "ID=" + getSelectedID(),
                        error: function () {
                            Msgalert('错误', '删除失败!', 'error');
                            grid.datagrid('clearSelections');
                        },
                        success: function (data) {
                            if (data.Success) {
                                Msgfade(arr.length + "条记录" + data.Msg); //提示消息
                                grid.datagrid('reload');
                                grid.datagrid('clearSelections'); //清除所有选中的元素
                            } else {
                                Msgalert('错误', data.Msg, 'error');
                            }
                        }
                    });
                }
            });
        } else {
            Msgshow('请先选择要删除的记录。');

        }
    }
</script>
